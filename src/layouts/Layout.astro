---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Agencia de marketing digital especializada en SEO, Redes Sociales, y Publicidad Digital" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://api.fontshare.com/v2/css?f=switzer@400,500&display=swap">
  </head>
  <body class="min-h-screen bg-white font-switzer text-body text-secondary">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --switzer: 'Switzer', system-ui, sans-serif;
  }
  html {
    font-family: var(--switzer);
    background: white;
    scroll-behavior: smooth;
  }
  h1 {
    font-family: var(--switzer);
    font-size: 128px;
    line-height: 102px;
    font-weight: 500;
    color: #030712;
  }
  h2 {
    font-family: var(--switzer);
    font-size: 60px;
    line-height: 60px;
    font-weight: 500;
    color: #030712;
  }
  h3 {
    font-family: var(--switzer);
    font-size: 24px;
    line-height: 32px;
    font-weight: 500;
    color: #030712;
  }
  @media (max-width: 768px) {
    h1 {
      font-size: 64px;
      line-height: 72px;
    }
    h2 {
      font-size: 40px;
      line-height: 48px;
    }
  }
</style>