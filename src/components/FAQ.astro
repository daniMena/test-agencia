---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;
---

<div class="divide-y divide-gray-200">
  {items.map((item) => (
    <details class="group py-6">
      <summary class="flex w-full cursor-pointer select-none justify-between text-left text-lg font-medium text-gray-900">
        {item.question}
        <svg class="h-6 w-6 flex-none stroke-gray-700 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </summary>
      <div class="mt-6 text-base leading-7 text-gray-600">
        <p>{item.answer}</p>
      </div>
    </details>
  ))}
</div>