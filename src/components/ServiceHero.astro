---
interface Props {
  title: string;
  subtitle: string;
  image?: string;
}

const { title, subtitle, image } = Astro.props;
---

<div class="relative bg-primary-800">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-600 to-secondary-600 mix-blend-multiply"></div>
    {image && <img src={image} alt="" class="w-full h-full object-cover mix-blend-multiply opacity-20" />}
  </div>
  <div class="relative max-w-7xl mx-auto py-24 px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
      {title}
    </h1>
    <p class="mt-6 max-w-3xl text-xl text-gray-100">
      {subtitle}
    </p>
  </div>
</div>