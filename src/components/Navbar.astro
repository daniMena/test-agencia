---
const services = [
  { name: 'SEO', href: '/servicios/seo' },
  { name: 'SEO Local', href: '/servicios/seo-local' },
  { name: 'Social Ads', href: '/servicios/social-ads' },
  { name: 'Google Ads', href: '/servicios/google-ads' },
  { name: 'Redes Sociales', href: '/servicios/redes-sociales' },
  { name: 'Diseño Web', href: '/servicios/diseno-web' },
];
---

<nav class="bg-white border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-2xl font-medium text-primary">
            MarketingPro
          </a>
        </div>
        <div class="hidden sm:ml-10 sm:flex sm:space-x-8">
          <a href="/" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-primary">
            Inicio
          </a>
          <div class="relative group">
            <button class="inline-flex items-center px-1 pt-1 text-sm font-medium text-primary">
              Servicios
              <svg class="ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
            <div class="absolute hidden group-hover:block w-48 rounded-lg shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5">
              {services.map((service) => (
                <a
                  href={service.href}
                  class="block px-4 py-2 text-sm text-secondary hover:bg-gray-50"
                >
                  {service.name}
                </a>
              ))}
            </div>
          </div>
          <a href="/quienes-somos" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-primary">
            Quiénes Somos
          </a>
          <a href="/contacto" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-primary">
            Contacto
          </a>
        </div>
      </div>
      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <a
          href="/contacto"
          class="px-6 py-3 text-sm font-medium rounded-full text-white bg-primary hover:bg-opacity-90 transition-all"
        >
          Contactar Ahora
        </a>
      </div>
    </div>
  </div>
</nav>